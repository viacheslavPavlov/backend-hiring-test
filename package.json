{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha tests --recursive",
    "test:load": "npm run start & artillery quick -r 100 -d 30 http://localhost:8010/health",
    "start": "node index.js",
    "coverage": "nyc --check-coverage=true --lines=80 npm run test",
    "eslint": "eslint . --ext .js,.ts",
    "eslint:fix": "eslint . --fix --ext .js,.ts"
  },
  "keywords": [
    "Xendit"
  ],
  "prepush": [
    "test",
    "eslint",
    "coverage"
  ],
  "author": "v.pavlov",
  "license": "ISC",
  "dependencies": {
    "artillery": "^1.7.7",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite": "^4.0.23",
    "sqlite-async": "^1.1.1",
    "sqlite3": "^5.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "assert": "^2.0.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.0",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2",
    "typescript": "^4.3.5"
  }
}
